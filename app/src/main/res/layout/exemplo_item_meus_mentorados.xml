<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_meu_mentorado"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_reuniao"
            android:layout_margin="5dp"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/txt_nome_mentorado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="João"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_meu_mentorado"/>

        <TextView
            android:id="@+id/txt_area_atuacao_mentorado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nome_mentorado"
            android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_meu_mentorado"
            android:text="Área de atuação"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginRight="13dp"
            android:backgroundTint="#7CCEF3"
            android:text="Ver perfil"
            android:textColor="#434343"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnIncluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incluir"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:backgroundTint="#4CAF50"
            android:drawableTint="@color/gray"
            android:textColor="@color/gray"
            android:drawableRight="@drawable/ic_add"
            android:layout_below="@+id/txt_area_atuacao_mentorado"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>